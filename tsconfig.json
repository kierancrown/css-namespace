{
    "compilerOptions": {
      "target": "es2015",
      "module": "commonjs",
      "lib": ["es2015", "dom"],
      "noImplicitAny": true,
      "removeComments": true,
      "preserveConstEnums": true,
      "outDir": "dist/",
      "strict": true,
      "sourceMap": true,
      "moduleResolution": "Node",
      "resolveJsonModule": true,
      "esModuleInterop": true
    },
    "include": ["src/**/*"],
    "exclude": ["node_modules", "**/*.spec.ts"]
    }